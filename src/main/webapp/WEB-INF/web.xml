<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>com.epam.delivery.web.filter.Listener</listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>REGISTRATION</servlet-name>
        <jsp-file>/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>REGISTRATION</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!--============================================================
	Controller
=============================================================-->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.epam.delivery.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>


    <!--============================================================
        Security filter.
        1) admin: admin commands
        2) client: client commands
        3) commons: commands for all roles
        4) out-of-control: commands without access control
        Delimiter - space/tab
    =============================================================-->
    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.epam.delivery.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>adminCabinet</param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>userCabinet editUser recharge payOrder editOrder createOrder viewCreateOrderPage</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>logout noCommand</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login viewRegistrationPage registration calculateCost viewCalculateCost setLocale</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <!--============================================================
	Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

</web-app>