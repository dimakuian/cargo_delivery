        <servlet-name>REGISTRATION</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>COUNT_COAST</servlet-name>
        <jsp-file>/WEB-INF/jsp/calculate_—Åost.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
