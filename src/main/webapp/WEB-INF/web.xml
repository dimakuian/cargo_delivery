    <!--============================================================
	Controller
=============================================================-->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.epam.delivery.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>


    <!--============================================================
        Security filter.
        1) admin: admin commands
        2) client: client commands
        3) commons: commands for all roles
        4) out-of-control: commands without access control
        Delimiter - space/tab
    =============================================================-->
    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>com.epam.delivery.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>adminCabinet confirmOrder changeOrderStatus adminViewOrder</param-value>
        </init-param>
        <init-param>
            <param-name>client</param-name>
            <param-value>clientCabinet editUser recharge payInvoice editOrder createOrder viewCreateOrderPage clientViewOrder clientViewInvoices</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>logout noCommand changePassword</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login viewRegistrationPage registration calculateCost viewCalculateCost setLocale</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <!--============================================================
	Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

</web-app>